<div class="booyah-box col-10 offset-1">
  <h1>Add A New Course</h1>
  
  <br />
  
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title, placeholder: 'For eg, Indian Cooking' %>
    <%= f.input :description, rows: 3, placeholder: 'Enter a basic description' %>
    <%= f.label 'Add An Image' %><br />
    <%= f.input :image %>
    <%= f.input :cost, placeholder: 'Enter cost, for eg 50' %>
  <br />
  <%= f.submit 'Create', class: 'btn btn-success' %>
  <% end %>
</div>